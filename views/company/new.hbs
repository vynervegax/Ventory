    <!-- Page Header-->
        <div class="page-content">
    <div class="page-header no-margin-bottom">
        <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Company Creation</h2>
        </div>
    </div>
    <!-- Breadcrumb-->

    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="#"></a>Company</a></li>
            <li class="breadcrumb-item active">New Company</li>
        </ul>
    </div>
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="block">
                        <div class="title"><strong>Basic Details</strong></div>
                        <div class="block-body">
                            <form class="form-horizontal" method="post">
                                <div class="row">
                                    <label class="col-sm-3 form-control-label">Company</label>
                                    <div class="col-sm-9">
                                        <div class="form-group-material">
                                            <input id="name" type="text" name="name" required class="input-material">
                                            <label for="name" class="label-material">Name of Company</label>
                                        </div>
                                        <div class="form-group-material">
                                            <input id="email" type="email" name="email" required class="input-material">
                                            <label for="email" class="label-material">Email Address </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="title"><strong>Services Information</strong></div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">Registration No.</label>
                                    <div class="col-sm-9">
                                        <input id="gstin" name="gstin" type="text" type="text" required placeholder="Recommended Alphabet then Numbers" class="form-control" required>
                                        <small id="test1" class="help-block-none"
                                            style="color: red;padding: 0 0 0 5px;margin-top: 0px; font-size: 90%; font-weight: 501;">
                                            
                                        </small>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="line"></div>
                                <div class="title"><strong>Address of Headquaters</strong></div>
                                <div class="line"></div>
                                <div class="row">
                                    <label class="col-sm-3 form-control-label">Address</label>
                                    <div class="col-sm-9">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <div class="form-group-material">
                                                    <input id="address" type="text" name="address"
                                                        class="input-material" required>
                                                    <label for="address" class="label-material">Local
                                                        Address</label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group-material">
                                                    <input id="city" type="text" name="city" class="input-material"
                                                        required>
                                                    <label for="city" class="label-material">City</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group-material">
                                                    <input id="state" type="text" name="state" required
                                                        class="input-material">
                                                    <label for="state" class="label-material">State</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group-material">
                                                    <input id="country" type="text" name="country" required
                                                        class="input-material" value="Malaysia">
                                                    <label for="country" class="label-material">Country</label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="title"><strong>Branch Information</strong></div>
                                <div class="line"></div>
                                <div class="row">
                                    <label class="col-sm-3 form-control-label">Details</label>
                                    <div class="col-sm-9">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group-material">
                                                    <input id="bank_name" type="text" name="bankName"
                                                        class="input-material" required>
                                                    <label for="bank_name" class="label-material">Branch Bank
                                                        Name</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group-material">
                                                    <input id="branch" type="text" name="branch" class="input-material"
                                                        required>
                                                    <label for="branch" class="label-material">Branch Area Manager</label>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                       <div class="form-group-material">
                                                            <input id="account_number" type="text" name="accountNumber"
                                                                class="input-material" required>
                                                            <label for="account_number" class="label-material">Branch Contact
                                                                No.</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                                                                            </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-9 ml-auto">
                                        <button type="cancel" class="btn btn-secondary">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

